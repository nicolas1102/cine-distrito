<!-- inlcuding the shared code head -->
<%- include('../includes/head', { pageTitle: 'Signup - Cine Distrito' }) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
    </head>

    <body>
        <%- include('../includes/header') %>
            <%- include('../includes/blob') %>
                <main>
                    <h1 data-value="CREATE A NEW ACCOUNT">CREATE A NEW ACCOUNT</h1>
                    <form action="" method="">
                        <div id="information-user">
                            <p>
                                <label for="fullname">Full Name</label>
                                <input type="" id="fullname" name="fullname" value="" required>
                            </p>
                            <p>
                                <label for="identificationCard">Identificaction Card</label>
                                <input type="text" id="identificationCard" name="identificationCard" value="" required>
                            </p>
                            <hr>
                            <p>
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" value="" required>
                            </p>
                            <p>
                                <label for="confirm-email">Confirm Email</label>
                                <input type="email" id="confirm-email" name="confirm-email" value="" required>
                            </p>
                            <p>
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" minlength="6" value="" required>
                            </p>
                            <p>
                                <label for="confirm-password">Confirm Password</label>
                                <input type="password" id="confirm-password" name="confirm-password" minlength="6"
                                    value="" required>
                            </p>
                        </div>
                        <div class="container-column-space">
                            <div id="image-upload">
                                <img id="image-preview" src="data/users/images/default.jpg" alt="Your picked image.">
                                <label for="image">User image</label>
                                <input type="file" name="image" id="image" accept="image/*" required>
                            </div>
                            <div id="submit-container">
                                <button class="btn">Create Account</button>
                                <p id="switch-form"><a href="/login">I Have a Account</a></p>
                            </div>
                        </div>

                    </form>
                </main>
                <%- include('../includes/footer') %>