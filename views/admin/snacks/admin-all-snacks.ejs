<%- include('../../shared/includes/head', { pageTitle: 'Snack Administration' }) %>
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/snack-management.js" defer></script>
</head>

<body>
<%- include('../../shared/includes/header') %>
<%- include('../../shared/includes/blob') %>
<main>
    <h1>Snack Administration</h1>
    <!-- <section id="add-item-section">
        <p>
            <a href="/admin/movies/new" class="btn">Add Movie</a>
        </p>
    </section> -->
    <section>
        <ul id="products-grid">
            <article class="product-item">
                <div class="image-container add">
                    <svg width="176px" height="176px" viewBox="-7.2 -7.2 38.40 38.40" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#b86161"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M15 12H12M12 12H9M12 12V9M12 12V15M17 21H7C4.79086 21 3 19.2091 3 17V7C3 4.79086 4.79086 3 7 3H17C19.2091 3 21 4.79086 21 7V17C21 19.2091 19.2091 21 17 21Z" stroke="#292929" stroke-width="1.7280000000000002" stroke-linecap="round"></path> </g></svg>
                </div>
                <div class="product-item-content">
                    <h2>Add New Snack</h2>
                    <div class="product-item-actions">
                        <a class="btn" href="/admin/snacks/new">Add New Snack</a>
                    </div>
                </div>
            </article>
            <% snacks.slice().reverse().forEach(snack => { %>
                <li>
                    <%- include('../../shared/includes/snack-item',{snack: snack}) %>
                </li>
            <% }); %>
        </ul>
    </section>
</main>
<%- include('../../shared/includes/footer') %>
</body>