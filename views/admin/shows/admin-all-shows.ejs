<%- include('../../shared/includes/head', { pageTitle: 'Show Administration - Cine Distrito' }) %>
<link rel="stylesheet" href="/styles/tables.css">
<link rel="stylesheet" href="/styles/shows.css">
<script src="/scripts/show-management.js" defer></script>
</head>

<body>
<%- include('../../shared/includes/header') %>
<%- // include('../shared/includes/blob') %>
<main>
    <h1>Show Administration</h1>
    <section>
        <table id="table">
            <thead>
                <tr>
                    <th id="movie-title">Movie</th>
                    <th id="date-title">Date</th>
                    <th id="time-title">Time</th>
                    <th id="theater-title">Theater</th>
                    <th id="screen-title">Screen</th>
                    <th id="actions-title">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-item">
                    <td id="movie">Add New Show</td>
                    <td id="date">-----</td>
                    <td id="time">-----</td>
                    <td id="theater">-----</td>
                    <td id="screen">-----</td>
                    <td id="table-item-actions">
                        <a class="btn" href="/admin/shows/new">Add New Show</a>
                    </td>
                </tr>
                <% shows.slice().reverse().forEach(show => { %>
                    <tr class="table-item">
                        <%- include('includes/show-item',{show: show}) %>
                    </tr>
                <% }); %> 
            </tbody>
        </table>
    </section>
</main>
<%- include('../../shared/includes/footer') %>
</body>