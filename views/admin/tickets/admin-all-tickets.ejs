<%- include('../../shared/includes/head', { pageTitle: 'Ticket Administration - Cine Distrito' }) %>
<link rel="stylesheet" href="/styles/tables.css">
<link rel="stylesheet" href="/styles/tickets.css">
<script src="/scripts/ticket-management.js" defer></script>
</head>

<body>
<%- include('../../shared/includes/header') %>
<%- include('../../shared/includes/blob') %>
<main>
    <h1>Ticket Administration</h1>
    <section>
        <table id="table">
            <thead>
                <tr>
                    <th id="movie-title">Movie</th>
                    <th id="date-title">Date</th>
                    <th id="time-title">Time</th>
                    <th id="theater-title">Theater</th>
                    <th id="screen-title">Screen</th>
                    <th id="position-title">Position</th>
                    <th id="status-title">Status</th>
                    <th id="actions-title">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-item">
                    <td id="movie">Add New Ticket</td>
                    <td id="date">-----</td>
                    <td id="time">-----</td>
                    <td id="theater">-----</td>
                    <td id="screen">-----</td>
                    <th id="position">-----</th>
                    <th id="status">-----</th>
                    <td id="table-item-actions">
                        <a class="btn" href="/admin/tickets/new">Add New Ticket</a>
                    </td>
                </tr>
                <% tickets.slice().reverse().forEach(ticket => { %>
                    <tr class="table-item">
                        <%- include('includes/ticket-item',{ticket: ticket}) %>
                    </tr>
                <% }); %> 
            </tbody>
        </table>
    </section>
</main>
<%- include('../../shared/includes/footer') %>
</body>