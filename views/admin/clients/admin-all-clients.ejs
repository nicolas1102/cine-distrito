<%- include('../../shared/includes/head', { pageTitle: 'Clients Administration' }) %>
<link rel="stylesheet" href="/styles/tables.css">
<link rel="stylesheet" href="/styles/clients.css">
<script src="/scripts/client-management.js" defer></script>
</head>

<body>
<%- include('../../shared/includes/header') %>
<%- // include('../shared/includes/blob') %>
<main>
    <h1>Client Administration</h1>
    <section>
        <table id="table">
            <thead>
                <tr>
                    <th id="id-title">Id</th>
                    <th id="email-title">Email</th>
                    <th id="name-title">Name</th>
                    <th id="identification-title">Identification</th>
                    <th id="actions-title">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% clients.slice().reverse().forEach(client => { %>
                    <tr class="table-item">
                        <%- include('includes/client-item',{client: client}) %>
                    </tr>
                <% }); %> 
            </tbody>
        </table>
    </section>
</main>
<%- include('../../shared/includes/footer') %>
</body>