<!-- saving the token in the path -->
<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" class="form" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
    <div id="information-employee">
        <p>
            <label for="email">Email <span>(*)</span></label>
            <input type="email" id="email" name="email" value="<%= employee.email %>" required>
        </p>
        <p <% if(password) { %> style="display: block;" <% } else {%>style="display: none;" <% } %>>
            <label for="name">Password <span>(*)</span></label>
            <input type="password" id="password" name="password" minlength="6" value="<%= employee.password %>" required>
        </p>
        <p>
            <label for="name">Full Name <span>(*)</span></label>
            <input type="" id="name" name="name" value="<%= employee.name %>" required>
        </p>
        <p>
            <label for="identification">Identification Card <span>(*)</span></label>
            <input type="text" id="identification" name="identification" value="<%= employee.identification %>" required>
        </p>
        <p>
            <label for="position">Position <span>(*)</span></label>
            <input type="text" id="position" name="position" value="<%= employee.position %>" required>
        </p>
        <div id="submit-container">
            <a href="/admin/employees" class="btn btn-alt">Cancel</a>
            <button class="btn">Save</button>
        </div>
    </div>
    <div class="container-column-space">
        <p>
            <label for="phone-number">Phone Number <span>(*)</span></label>
            <input type="text" id="phone-number" name="phone-number" value="<%= employee.phoneNumber %>" required>
        </p>
        <p>
            <label for="contract-date">Contract Start Date <span>(*)</span></label>
            <input type="date" id="contract-date" name="contract-date" value="<%= employee.contractStartDate %>" required>
        </p>
        <p>
            <label for="salary">Salary <span>(*)</span></label>
            <input type="number" id="salary" name="salary" value="<%= employee.salary %>" required>
        </p>
        <p>
            <label for="theater">Theater: <span>(*)</span></label>
            <select name="theater" id="theater-select" required>
                <% theaters.forEach(theater => { %>
                    <option value="<%= theater.id %>" <% if (employee.theater.name === theater.name) { %>selected="selected"<% } %>><%= theater.name %></option>
                <% }); %>
            </select>
        </p>
        <div id="image-upload-control">
            <p>
                <label for="imageName">User Image <span>(*)</span></label>
                <input type="file" name="imageName" id="imageName" accept="image/*">
            </p>
            <img id="image-preview" src="<%= employee.imageUrl %>" alt="Your picked image.">
        </div>
    </div>
</form>