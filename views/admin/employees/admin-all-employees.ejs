<%- include('../../shared/includes/head', { pageTitle: 'Employee Administration' }) %>
<link rel="stylesheet" href="/styles/tables.css">
<link rel="stylesheet" href="/styles/employees.css">
<script src="/scripts/employee-management.js" defer></script>
</head>

<body>
    <%- include('../../shared/includes/header') %>
    <%- include('../../shared/includes/blob') %>
    <main>
        <h1>Employee Administration</h1>
        <section>
            <table id="table">
                <thead>
                    <tr>
                        <th id="id-title">Id</th>
                        <th id="email-title">Email</th>
                        <th id="name-title">Name</th>
                        <th id="identification-title">Identification</th>
                        <th id="position-title">Position</th>
                        <th id="phone-number-title">Phone Number</th>
                        <th id="contract-date-title">Contract Start Date</th>
                        <th id="salary-title">Salary</th>
                        <th id="theater-title">Theater</th>
                        <th id="actions-title">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="table-item">
                        <td id="id">Add New Employee</td>
                        <td id="email">-----</td>
                        <td id="name">-----</td>
                        <td id="identification">-----</td>
                        <td id="position">-----</td>
                        <td id="phone-number">-----</td>
                        <td id="contract-date">-----</td>
                        <td id="salary">-----</td>
                        <td id="theater">-----</td>
                        <td id="table-item-actions">
                            <a class="btn" href="/admin/employees/new">Add New Employee</a>
                        </td>
                    </tr>
                    <% employees.slice().reverse().forEach(employee => { %>
                        <tr class="table-item">
                            <%- include('includes/employee-item',{employee: employee}) %>
                        </tr>
                    <% }); %> 
                </tbody>
            </table>
        </section>
    </main>
    <%- include('../../shared/includes/footer') %>
</body>