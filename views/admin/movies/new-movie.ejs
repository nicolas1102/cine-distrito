<!-- inlcuding the shared code head -->
<%- include('../../shared/includes/head', { pageTitle: 'Add New Product' }) %>
<link rel="stylesheet" href="/styles/forms.css">
    </head>

    <body>
        <%- include('../../shared/includes/header') %>
        <%- include('../../shared/includes/blob') %>
            <main>
                <h1>Add New Product</h1>
                <form action="" method="" >
                    <p>
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" require>
                    </p>
                    <p>
                        <label for="image">Image</label>
                        <input type="file" name="image" id="image" accept="image/png,image/jpg">
                    </p>
                    <p>
                        <label for="summary">Summary</label>
                        <input type="text" name="summary" id="summary" maxlength="250" require>
                    </p>
                    <p>
                        <label for="price">Price</label>
                        <input type="number" min="0.01" step="0.01" name="price" id="price" require>
                    </p>
                    <p>
                        <label for="description">Description</label>
                        <textarea name="description" id="description" rows="7" require></textarea>
                    </p>
                    <p>
                        <button type="reset" class="btn btn-alt">Reset</button>
                        <button class="btn">Save</button>
                    </p>
                </form>
            </main>
            <%- include('../../shared/includes/footer') %>