<!-- inlcuding the shared code head -->
<%- include('../../shared/includes/head', { pageTitle: 'Add New Product' }) %>
<link rel="stylesheet" href="/styles/forms.css">
    </head>

    <body>
        <%- include('../../shared/includes/header') %>
        <%- include('../../shared/includes/blob') %>
            <main>
                <h1>Add New Product</h1>
                <!-- saving the token in the path -->
                <form action="/admin/movies?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
                    <p>
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" require>
                    </p>
                    <p>
                        <label for="description">Description</label>
                        <textarea name="description" id="description" rows="4" require></textarea>
                    </p>
                    <p>
                        <label for="duration">Duration <span>(Minutes)</span></label>
                        <input type="number" min="1" step="1" name="duration" id="duration" require>
                    </p>
                    <p>
                        <label for="genre">Genre</label>
                        <input type="text" name="genre" id="genre" require>
                    </p>
                    <p>
                        <label for="imageName">Image</label>
                        <input type="file" name="imageName" id="imageName" accept="image/*">
                    </p>
                    <p>
                        <button type="reset" class="btn btn-alt">Reset</button>
                        <button class="btn">Save</button>
                    </p>
                </form>
            </main>
            <%- include('../../shared/includes/footer') %>