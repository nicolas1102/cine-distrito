<%- include('../../shared/includes/head', { pageTitle: 'Theater Administration' }) %>
<link rel="stylesheet" href="/styles/tables.css">
<link rel="stylesheet" href="/styles/theaters.css">
<script src="/scripts/theater-management.js" defer></script>
</head>

<body>
<%- include('../../shared/includes/header') %>
<%- include('../../shared/includes/blob') %>
<main>
    <h1>Theater Administration</h1>
    <section>
        <table id="table">
            <thead>
                <tr>
                    <th id="name-title">Name</th>
                    <th id="address-title">Address</th>
                    <th id="screens-title">N. of Screens</th>
                    <th id="rating-title">Rating</th>
                    <th id="amount-ratings-title">Amount R.</th>
                    <th id="actions-title">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-item">
                    <td id="name">Add New Theater</td>
                    <td id="address">-----</td>
                    <td id="num-screens">-----</td>
                    <td id="rating">-----</td>
                    <td id="amount-ratings">-----</td>
                    <td id="table-item-actions">
                        <a class="btn" href="/admin/theaters/new">Add New Theater</a>
                    </td>
                </tr>
                <% theaters.slice().reverse().forEach(theater => { %>
                    <tr class="table-item">
                        <%- include('includes/theater-item',{theater: theater}) %>
                    </tr>
                <% }); %> 
            </tbody>
        </table>
    </section>
</main>
<%- include('../../shared/includes/footer') %>
</body>