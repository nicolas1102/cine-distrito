<!-- saving the token in the path -->
<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" class="form">
    <div id="information-theater">
        <p>
            <label for="name">Name: </label>
            <input type="text" name="name" id="name" value="<%= theater.name %>" require>
        </p>
        <p>
            <label for="name">Address: </label>
            <input type="text" name="address" id="address" value="<%= theater.address %>" require>
        </p>
        <p>
            <label for="num-screens">Number of Screens:</label>
            <input type="number" min="5" max="15" step="1" name="num-screens" id="num-screens" value="<%= theater.numScreens %>" require>
        </p>
        <p>
            <a href="/admin/theaters" class="btn btn-alt">Cancel</a>
            <button class="btn">Save</button>
        </p>
    </div>
</form>