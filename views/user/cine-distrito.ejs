            <% movies.slice().reverse().forEach(movie=> { %>
                <li>
                    <%- include('../shared/includes/movie-item',{movie: movie}) %>
                </li>
            <% }); %>
        </ul>
    </section>
    <section id="snacks-section">
        <h2 class="section-title">SNACKS</h2>
        <ul id="products-grid">
            <% snacks.slice().reverse().forEach(snack=> { %>
                <% if (snack.amount > 0) { %>
                    <li>
                        <%- include('../shared/includes/snack-item',{snack: snack}) %>
                    </li>
                <% } %>
            <% }); %>
        </ul>
    </section>
