<!-- inlcuding the shared code head -->
<%- include('../../shared/includes/head', { pageTitle: 'Signup - Cine Distrito' }) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
    <script src="/scripts/image-preview.js" defer></script>
    </head>

<body>
    <%- include('../../shared/includes/header') %>
    <%- include('../../shared/includes/blob') %>
    <main>
        <h1>CREATE A NEW ACCOUNT</h1>
        <!-- if in the input data exist an error message, show it -->
        <% if (inputData.errorMessage) { %>
            <section class="alert">
                <h2><%= inputData.title %></h2>
                <p><%= inputData.errorMessage %></p>
            </section>
            <% } %>
        <form action="/signup?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
            <!-- object, so we can verify the csrf token when the form is send-->
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <div id="information-user">
                <p>
                    <label for="email">Email <span>(*)</span></label>
                    <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
                </p>
                <p>
                    <label for="confirm-email">Confirm Email <span>(*)</span></label>
                    <input type="email" id="confirm-email" name="confirm-email" value="<%= inputData.confirmEmail %>" required>
                </p>
                <p>
                    <label for="password">Password <span>(*)</span></label>
                    <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>" required>
                </p>
                <p>
                    <label for="confirm-password">Confirm Password <span>(*)</span></label>
                    <input type="password" id="confirm-password" name="confirm-password" minlength="6"
                        value="<%= inputData.confirmPassword %>" required>
                </p>
                <p>
                    <label for="name">Full Name <span>(*)</span></label>
                    <input type="" id="name" name="name" value="<%= inputData.name %>" required>
                </p>
                <p>
                    <label for="identification">Identification Card <span>(*)</span></label>
                    <input type="text" id="identification" name="identification" value="<%= inputData.identification %>" required>
                </p>
            </div>
            <div class="container-column-space">
                <div id="image-upload-control">
                    <p>
                        <label for="imageName">User Image <span>(*)</span></label>
                        <input type="file" name="imageName" id="imageName" accept="image/*" required>
                    </p>
                    <img id="image-preview" src="" alt="Your picked image.">
                </div>
                <div id="submit-container">
                    <button class="btn">Create Account</button>
                    <p id="switch-form"><a href="/login">I Have a Account</a></p>
                </div>
            </div>

        </form>
    </main>
<%- include('../../shared/includes/footer') %>